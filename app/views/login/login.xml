<Page
  class="u-page p-login"
  loaded="pageLoaded"
>
  <GridLayout>
    <GridLayout
      class="u-background u-background--animated"
    />

    <StackLayout
      class="p-login__start"
      verticalAlignment="center"
      horizontalAlignment="center"
    >
      <Image
        src="res://logo_login"
        stretch="none"
        horizontalAlignment="center"
      />
      <Label
        class="logo-text l-logo-text"
        text="GROCERIES"
        horizontalAlignment="center"
      />

      <Button
        text="Login"
        class="btn"
      />
    </StackLayout>
  </GridLayout>
</Page>