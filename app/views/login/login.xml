<Page
  class="u-page p-login"
  loaded="pageLoaded"
>
  <GridLayout>
    <GridLayout
      class="u-background u-background--animated"
    />

    <StackLayout
      id="loginStart"
      class="login-start"
    >
      <Image
        src="res://logo_login"
        stretch="none"
        horizontalAlignment="center"
      />
      <Label
        class="logo-text l-logo-text"
        text="GROCERIES"
        horizontalAlignment="center"
      />

      <Button
        text="Login"
        class="btn"
        tap="showLoginForm"
      />
    </StackLayout>

    <StackLayout
      id="loginForm"
      class="login-form"
    >
      <Label
        class="logo-text l-logo-text"
      />

      <TextField
        class="input"
        autocorrect="false"
        autocapitalizationType="none"
        keyboardType="email"
      />
      <TextField
        class="input"
        secure="true"
      />

      <Button
        text="Login"
      />
      <Label
        text="Forgot password?"
      />
    </StackLayout>

    <AbsoluteLayout
      id="outerLogo"
      class="l-outer-logo-container"
    >
      <Image
        src="res://logo_login"
        stretch="none"
      />
    </AbsoluteLayout>
  </GridLayout>
</Page>